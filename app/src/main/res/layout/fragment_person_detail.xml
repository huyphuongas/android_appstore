<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PersonDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/information"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imv_register_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40sp"
                android:contentDescription="@string/additional_information"
                android:src="@drawable/outline_account_circle_black_36" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="250dp"
                android:layout_height="54dp"
                android:layout_toEndOf="@+id/imv_register_user"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:autofillHints="emailAddress"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imv_register_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40sp"
                android:contentDescription="@string/additional_information"
                android:src="@drawable/outline_account_circle_black_36" />

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="250dp"
                android:layout_height="54dp"
                android:layout_toEndOf="@+id/imv_register_name"
                android:hint="@string/full_name"
                android:autofillHints="name"
                android:inputType="text"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imv_register_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40sp"
                android:contentDescription="@string/additional_information"
                android:src="@drawable/outline_smartphone_black_36" />

            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_toEndOf="@+id/imv_register_phone"
                android:autofillHints="phone"
                android:inputType="phone"
                android:text="@string/phone_number"
                android:textColor="@color/black"
                android:textSize="17sp"
                tools:ignore="TouchTargetSizeCheck" />
        </RelativeLayout>

