        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imv_register_address"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginStart="40sp"
                android:contentDescription="@string/additional_information"
                android:src="@drawable/outline_location_on_black_36" />

            <EditText
                android:id="@+id/edt_address"
                android:layout_width="250dp"
                android:layout_height="54dp"
                android:layout_toEndOf="@+id/imv_register_address"
                android:hint="@string/address"
                android:inputType="text"
                android:autofillHints="postalAddress"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imv_register_gender"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginStart="40sp"
                android:contentDescription="@string/additional_information"
                android:src="@drawable/ic_gender" />

            <CheckBox
                android:id="@+id/cb_nam"
                android:layout_marginStart="30dp"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:text="@string/nam"
                android:layout_toEndOf="@+id/imv_register_gender"
                />

            <CheckBox
                android:id="@+id/cb_nu"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/cb_nam"
                android:text="@string/nu" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_update"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/radius_button"
            android:text="@string/update" />
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius_button"
            android:text="@string/delete" />
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius_button"
            android:text="@string/logout" />

